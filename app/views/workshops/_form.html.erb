<%= simple_form_for(@workshop) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name , placeholder: "Enter the name of the training"%>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :hours , placehodler: "Total number of hours to be billed by the trainers " %>
    <%= f.input :address , placeholder: "Where is the training  happening"%>
    <%= f.input :contact_person , placehodler: "Who is the contact person at the training location"%>
    <%= f.input :contact %>
    <%= f.input :amount , label:"Enter the amount charged for this training " %>
    <%= f.association :effort %>

    <% @trainers.each do |t| %>
      <%= check_box_tag("trainers[]", t.id, @workshop.trainers.include?(t)) %>
      <label><%= t.name %></label>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit , 'Add Workshop'%>
  </div>
<% end %>
